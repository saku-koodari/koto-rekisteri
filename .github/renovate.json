{
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchFileNames": ["**/pom.xml"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "matchFileNames": [".mise.toml$"],
      "packagePatterns": ["^awscli$"],
      "datasource": "github-tags",
      "registryUrls": ["https://github.com/aws/aws-cli"],
      "versioning": "semver",
      "extractVersion": "ref:{{{newVersion}}}",
    }
  ]
}
